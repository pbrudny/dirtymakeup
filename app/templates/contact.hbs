<div class="jumbotron text-center">
    <h1>Contact us</h1>
    <br/><br/>
    <div class="form form-group form-group-lg row">
        <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-1 col-md-8 col-md-offset-2">
            {{input type="email" value=emailAddress class="form-control" placeholder="Please type your e-mail address." autofocus="autofocus"}}
        </div>
        <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-1 col-md-8 col-md-offset-2">
            {{textarea value=message class="form-control" placeholder="Tell us something"}}
        </div>
        <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-1 col-md-8 col-md-offset-2">
            <button class="btn btn-primary btn-lg btn-block" {{action 'sendMessage'}} disabled="{{unless isValid 'disabled'}}">Send message</button>
        </div>

    </div>

    {{#if responseMessage}}
        <div class="alert alert-success">{{responseMessage}}</div>
    {{/if}}


    <br/><br/>

</div>
